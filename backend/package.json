{
  "name": "mindsta-backend",
  "version": "1.0.0",
  "description": "Mindsta Backend API Server",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "prod": "NODE_ENV=production node server/index.js",
    "pm2:start": "pm2 start ecosystem.config.json",
    "pm2:stop": "pm2 stop mindsta-backend",
