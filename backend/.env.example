# Environment
NODE_ENV=development # development | production

# MongoDB Connection (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mindsta?retryWrites=true&w=majority

# JWT Secret (REQUIRED - CHANGE IN PRODUCTION!)
VITE_JWT_SECRET=your-secret-key-change-in-production-make-it-long-and-random

# Paystack Integration (REQUIRED for payments)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Email Configuration (Required for sending emails)
# Leave EMAIL_USER and EMAIL_PASSWORD empty to run in test mode (emails logged to console)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Mindsta <noreply@mindsta.com>
ADMIN_EMAIL=admin@mindsta.com

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:5173

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080,http://localhost:8081

# Server Port
PORT=3000
