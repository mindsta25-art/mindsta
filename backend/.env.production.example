# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Environment
NODE_ENV=production

# MongoDB Connection (REQUIRED)
MONGODB_URI=mongodb+srv://production-user:STRONG_PASSWORD@production-cluster.mongodb.net/mindsta?retryWrites=true&w=majority

# JWT Secret (REQUIRED - Use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
VITE_JWT_SECRET=your-production-jwt-secret-min-32-characters-long

# Paystack Integration (Use LIVE keys in production)
PAYSTACK_SECRET_KEY=sk_live_your_paystack_live_secret_key
VITE_PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_live_public_key

# Email Configuration (REQUIRED for production emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Mindsta <noreply@yourdomain.com>
ADMIN_EMAIL=admin@yourdomain.com

# Frontend URL (Your production domain)
FRONTEND_URL=https://yourdomain.com

# CORS Allowed Origins (Your production domains, comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Server Port
PORT=3000
