# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to version control

# MongoDB Atlas Configuration
# Get your connection string from MongoDB Atlas dashboard
VITE_MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/mindsta?retryWrites=true&w=majority"

# JWT Secret for Authentication
# Generate a strong random secret (change in production!)
VITE_JWT_SECRET="your_secure_jwt_secret_key_change_in_production"

# Backend API Configuration
VITE_API_URL="http://localhost:3000/api"

# Optional: Analytics & Monitoring
# VITE_ANALYTICS_ID=""
# VITE_SENTRY_DSN=""

# Optional: Feature Flags
# VITE_ENABLE_DARK_MODE="true"
# VITE_ENABLE_BETA_FEATURES="false"

# Optional: API Configuration
